<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/BlueOpacityLight"/> <!-- Darker color when pressed -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/BlueOpacityLight"/> <!-- Default color -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
